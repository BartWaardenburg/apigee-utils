{
  "name": "apigee-utils",
  "version": "1.0.0",
  "description": "A set of utility functions to ease javascript development on the Apigee Edge api platform",
  "main": "index.js",
  "scripts": {
    "prepublish": "npm run lint && npm run flow && npm run build",
    "build": "babel ./src -d ./lib --ignore '.spec,.interface'",
    "lint": "eslint src/**/*.js",
    "flow": "flow check",
    "test": "ava",
    "test:watch": "ava --watch",
    "coverage": "nyc ava",
    "docs": "documentation readme ./src/index.js --section 'Reference'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BartWaardenburg/apigee-utils.git"
  },
  "keywords": [
    "apigee",
    "utils",
    "utility",
    "functions"
  ],
  "author": "Bart Waardenburg <bartwaardenburg@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BartWaardenburg/apigee-utils/issues"
  },
  "homepage": "https://github.com/BartWaardenburg/apigee-utils#readme",
  "ava": {
    "files": [
      "src/**/*.spec.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "failFast": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "reporter": "lcov",
    "require": [
      "babel-register"
    ],
    "all": true,
    "cache": true,
    "exclude": [
      "lib"
    ],
    "include": [
      "src/**/*.js"
    ]
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel": "^6.5.2",
    "babel-cli": "^6.10.1",
    "babel-eslint": "^6.1.0",
    "babel-plugin-array-includes": "^2.0.3",
    "babel-plugin-transform-flow-strip-types": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0",
    "documentation": "^4.0.0-beta5",
    "eslint": "^2.13.1",
    "eslint-plugin-flow-vars": "^0.4.0",
    "eslint-plugin-flowtype": "^2.2.7",
    "flow-bin": "^0.27.0",
    "nyc": "^6.6.1"
  }
}
